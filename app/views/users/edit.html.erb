<%= form_for(@user) do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username, placeholder: @user.username %><br>
  <%= f.label :email %><br>
  <%= f.email_field :email, placeholder: @user.email %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation, 'Please confirm new password' %><br>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit 'Submit' %>
<% end %>
